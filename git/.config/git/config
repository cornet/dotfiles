[alias]
  co = checkout
	ci = commit
	df = diff
	l = log
	ph = push
	pu = pull
	sh = show
	st = status

	rb = rebase
	rbi = rebase -i --keep-base

	f = fetch
	fa = fetch --all

	r = reset
	rh = reset --hard

	dfst = diff --stat


# Anti Screw up
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

cmd_exists bat && alias cat=bat

# Calculator
alias c='noglob perl -e '\''$_="@ARGV";s/\^/**/g;y/x/*/;print eval $_, "\n"'\'''

alias ldk="BUNDLE_GEMFILE=${HOME}/dev/freeagent-devkit/Gemfile bundle exec ${HOME}/dev/freeagent-devkit/bin/devkit"

alias gpr="git push && gh pr create -fd && gh pr view -w"
